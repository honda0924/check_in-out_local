.container
  / Outer Row
  .row.justify-content-center
    .col-xl-10.col-lg-12.col-md-9
      .card.o-hidden.border-0.shadow-lg.my-5
        .card-body.p-0
          / Nested Row within Card Body
          .row
            .col-lg-6.d-done.d-lg-block.bg-login-image
            .col-lg-6
              .p-5
                .text-center
                  %h1.h4.text-gray-900.mb-4 生徒新規登録
                =form_for(@student) do |f|
                  .form-group
                    =f.text_field :student_name ,class: "form-control form-control-user",placeholder: "生徒氏名"
                  .form-group
                    =f.text_field :student_class ,class: "form-control form-control-user",placeholder: "クラス"
                  .form-group
                    =f.text_field :parent_name ,class: "form-control form-control-user",placeholder: "保護者氏名"
                  .form-group
                    .custom-control.custom-checkbox.small
                      =f.check_box :student_enabled,class: "custom-control-input"
                      =f.label :student_enabled, "在籍中"
                  =f.submit "登録", class:"btn btn-primary btn-user btn-block"
                = link_to "キャンセル", root_path
                  
